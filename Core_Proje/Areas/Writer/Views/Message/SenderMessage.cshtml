@using EntityLayer.Concrete
@model List<WriterMessage>
@{
    ViewData["Title"] = "SenderMessage";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Giden Kutusu</h4>
                  <p class="card-description">
                     
                  </p>
                  <div class="table-responsive">
                    <table class="table">
                      <thead>
                        <tr>
                          <th>#</th>
                          <th>Konu</th>
                          <th>Alıcı</th>
                          <th>Tarih</th>
                           <th>Detaylar</th>
                        </tr>
                      </thead>
                      <tbody>
                          @foreach(var item in Model){
                         
                            <tr>
                          <th>@item.WriterMessageID</th>
                          <td>@item.Subject</td>
                          <td>@item.ReceiverName</td>
                          <td>@(((DateTime)item.Date).ToString("dd-MMM-yyyy"))</td>
                          @*<td><label class="@color">@item.WriterMessageID</label></td>*@
                          <td><a href="/Writer/Message/ReceiverMessageDetails/@item.WriterMessageID" class="btn btn-outline-primary">Mesajı Gör</a></td>
                        </tr>}
                     
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
