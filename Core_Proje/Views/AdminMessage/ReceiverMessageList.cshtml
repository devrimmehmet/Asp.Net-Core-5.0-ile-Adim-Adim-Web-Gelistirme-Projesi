<div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Yazar Admin Gelen Kutusu</h4>
                    @*<p class="card-description"> Deneyimler <code>Tablosu</code>
                    </p>*@
                    <div class="table-responsive">
                      <table class="table">
                        <thead>
                          <tr>
                            <th>#</th>
                            <th>Gönderen</th>
                            <th>Konu</th>
                            <th>Tarih</th>
                            <th>Sil</th>
                            <th>Mesajı Gör</th>
                          </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model){
                          <tr>
                            <td>@item.WriterMessageID</td>
                           <td>@item.SenderName</td>
                            <td>@item.Subject</td>
                           <td>@item.Date</td>
                          <td> <a href="/AdminMessage/AdminMessageDelete/@item.WriterMessageID" class="btn btn-outline-danger">Sil</a></td>
                           <td> <a href="/AdminMessage/AdminMessageDetails/@item.WriterMessageID" class="btn btn-outline-success">Mesajı Gör</a></td>
                            
                          </tr>
                          }
                          
                        </tbody>

                      </table>
                      <a asp-for="AdminMessageAdd" class="btn btn-outline-primary">Yeni Mesaj Oluştur</a>
                     
                    </div>
                  </div>
                </div>

              </div>
