@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "AdminMessageSend";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
 <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description"> Yeni Mesaj Gönderme Paneli </p>
                <form class="forms-sample" method="post">
                    <div class="form-group">
                        <label>Konu</label>
                       @Html.TextBoxFor(x=>x.Subject, new {@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label>Alıcı</label>
                        @Html.TextBoxFor(x=>x.Receiver, new {@class="form-control"})
                    </div>
                   <div class="form-group">
                        <label>Mesaj</label>
                        @Html.TextAreaFor(x=>x.MessageContent,6,3, new {@class="form-control"})
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Gönder</button>
                    <button class="btn btn-dark">İptal</button>
                </form>
            </div>
        </div>
    </div>